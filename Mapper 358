#include	"..\DLL\d_iNES.h"
#include	"..\Hardware\h_JY.h"
#include 	"..\Hardware\h_DIP.h"

namespace {
void	sync (void) {
	JY::syncPRG(0x3F, JY::outerBank.prgHigh <<6);
	if (JY::outerBank.chr4M && JY::mode.chrMode ==MODE_CHR2K) {
		JY::syncCHR(0x1FF, 0x200);
		JY::syncNT (0x1FF, 0x200);
	} else {
		JY::syncCHR(0x0FF, JY::outerBank.chrA18 <<8);
		JY::syncNT (0x0FF, JY::outerBank.chrA18 <<8);
	}
}

BOOL	MAPINT	load (void) {
	JY::load(sync, false);
	iNES_SetSRAM();
	return TRUE;
}

uint16_t mapperNum =358;
} // namespace

MapperInfo MapperInfo_358 = {
	&mapperNum,
	_T("晶太 YY860606C"),
	COMPAT_FULL,
	load,
	JY::reset,
	NULL,
	JY::cpuCycle,
	JY::ppuCycle,
	JY::saveLoad,
	NULL,
	DIP::Config
};
